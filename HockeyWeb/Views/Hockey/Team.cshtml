@model HockeyWeb.Models.Team

@{
    ViewBag.Title = "Visa team";
}

<h1>@Model.Namn</h1>
Laget består av

<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Position</th>
        <th scope="col">Salary</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players)
        {

            <tr>
                <td>
                    @Html.ActionLink(
        linkText: @player.Firstname + " " + @player.Lastname,
        actionName: "Show",
        controllerName: "Hockey",
        routeValues: new { id = player.Id},
        htmlAttributes:null)


                    
                </td>
                <td>@player.Position</td>
                <td>@player.Salary</td>
            </tr>
        }
    </tbody>
</table>

